<script language="javascript" type="text/javascript">
	$(function () {
		var delete_id = 0;
		$( "#msg_dialog" ).dialog({
            autoOpen: false,
            width: 555,
            dialogClass: "my-dialog",
            modal: true,
            show: {
                effect: "blind",
                duration: 300
            },
