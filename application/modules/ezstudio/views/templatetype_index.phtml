		});
		
		$('#add').click(function () {
			location.href = '/ezstudio/templatetype/add';
		});

		$('a[delete_id]').click(function () {
			delete_id = $(this).attr('delete_id');
			$( "#confirm_dialog" ).dialog( "open");
		});
    });
</script>
