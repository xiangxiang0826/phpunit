                duration: 500
            },
            buttons: {
                "确定": function() {
                	$( this ).dialog( "close" );
                }
            }
        });
		$( "#confirm_dialog" ).dialog({
            autoOpen: false,
            width: 555,
            dialogClass: "my-dialog",
            show: {
                effect: "blind",
                duration: 300
            },
            hide: {
                effect: null,
                duration: 500
            },
            buttons: {
                "取消": function() {
                    $( this ).dialog( "close" );
                },
                "确定": function() {
                	$( this ).dialog( "close" );
                	$.post('/ezstudio/templatetype/delete', {id:delete_id}, function (data) {
                    	if(data.status == 406) {
                        	$('#msg_dialog .message_text').text(data.msg);
                    		$( "#msg_dialog" ).dialog( "open");
                    		return false;
                        } else if (data.msg == 505) {
                            $('#msg_dialog .message_text').text('亲，你没有这个操作的权限！');
                            $("#msg_dialog").dialog("open");
                            return false;
                        } 
